{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean Project",
			"detail": "Deletes build files and whatnot",
			"type": "shell",
			"windows": {
				"command": "powershell ${workspaceFolder}\\scripts\\clean.ps1",
			},
		},
		{
			"label": "Compile Files",
			"detail": "Compile the Java into class files",
			"dependsOn": [ "Clean Project" ],
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"windows": {
				"command": "powershell ${workspaceFolder}/scripts/compile.ps1"
			},
		},
		{
			"label": "Run Project",
			"detail": "Run compiled Java application",
			"type": "shell",
			"windows": {
				"command": "powershell ${workspaceFolder}\\run.ps1",
			},
			"problemMatcher": []
		}
	]
}